<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/frosty_gradient"
    android:layout_height="match_parent"
    tools:context=".Futsal.Futsal_AllBookedBookingFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_26dp"
        android:id="@+id/closeButton_allBooking"
        android:layout_gravity="right"
        android:layout_margin="25dp"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:text="All The Bookings"
            android:textColor="@color/pleasingText"
            android:layout_alignParentBottom="true"
            android:textSize="60px"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_marginTop="7dp"
                android:padding="10dp"
                android:background="#dddddd"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/previousDayArrow_futsalAllBooking"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:layout_weight="2"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/thisDayText_futsalAllBooking"
                        android:text="Date"></TextView>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextDayArrow_futsalAllBooking"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_weight="2"></ImageView>


            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewPager_futsalAllBooking"></androidx.viewpager.widget.ViewPager>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>