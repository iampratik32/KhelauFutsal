<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frosty_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Player.Player_GroundDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:visibility="gone"
                    android:id="@+id/viewPager_playerFutsalDetail"></androidx.viewpager.widget.ViewPager>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="55px"
                        android:text=""
                        android:textStyle="bold"
                        android:id="@+id/futsalMainName_bookFutsalPage"
                        android:textColor="#ffffff"></TextView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/morePleasingWhite"
                        android:elevation="3dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="20"
                                android:padding="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="45px"
                                    android:textStyle="bold"
                                    android:layout_weight="2"
                                    android:text="Location:"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="30px"
                                    android:id="@+id/futsalLocation_bookFutsalPage"
                                    android:textStyle="bold"
                                    android:layout_weight="19"
                                    android:layout_gravity="center"
                                    android:gravity="center"></TextView>

                            </LinearLayout>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_buttons"
                                android:text="View On Map"
                                android:id="@+id/viewOnMap_bookFutsalPage"
                                android:paddingTop="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="25dp"
                                android:paddingLeft="25dp"></Button>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:text="Futsal Price:"
                                android:textSize="45px"
                                android:textStyle="bold"></TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:id="@+id/futsalPrice_groundDetail"
                                android:text=""
                                android:layout_alignParentRight="true"
                                android:textSize="45px"
                                android:textStyle="bold"></TextView>

                        </RelativeLayout>


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="@color/morePleasingWhite"
                        app:cardCornerRadius="10dp"
                        android:elevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="Futsal Attractions"
                                android:layout_margin="15dp"></TextView>


                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:id="@+id/recyclerView_futsalBookingPage"></androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>





                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/morePleasingWhite"
                        android:elevation="3dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="45px"
                                android:layout_gravity="left"
                                android:textStyle="bold"
                                android:layout_weight="2"
                                android:text="Contact Details:"></TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="20"
                                android:padding="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="40px"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    android:text="Phone Number:"
                                    android:gravity="right"></TextView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="18"
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:id="@+id/phoneNumberCard_futsalBookingPage"
                                        app:cardCornerRadius="15dp"

                                        android:layout_gravity="right">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="10dp"
                                                android:src="@drawable/ic_phone_black_24dp"></de.hdodenhof.circleimageview.CircleImageView>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:id="@+id/phoneNumber_futsalBookingPage"
                                                android:paddingRight="10dp"
                                                android:layout_marginLeft="10dp"></TextView>


                                        </LinearLayout>


                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="20"
                                android:padding="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="40px"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    android:text="Email:"
                                    android:gravity="right"></TextView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="18"
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:id="@+id/emailCard_futsalBookingPage"
                                        app:cardCornerRadius="15dp"

                                        android:layout_gravity="right">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="10dp"
                                                android:src="@drawable/ic_email_black_24dp"></de.hdodenhof.circleimageview.CircleImageView>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:id="@+id/email_futsalBookingPage"
                                                android:paddingRight="10dp"
                                                android:layout_marginLeft="10dp"></TextView>


                                        </LinearLayout>


                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:id="@+id/progressBar_playerGroundDetail"></ProgressBar>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_height="match_parent">


                    <Button
                        android:layout_width="match_parent"
                        android:id="@+id/bookButton_bookFutsalPage"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/round_buttons"
                        android:layout_height="wrap_content"
                        android:text="Start Booking"></Button>


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="50dp"></View>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</FrameLayout>