<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:windowSoftInputMode="adjustNothing"
    android:layout_height="match_parent"
    tools:context=".Player.Player_GroundFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:text="Book A Ground"
                android:textColor="@color/pleasingText"
                android:textSize="65px"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:weightSum="5">

            <EditText
                android:layout_width="0dp"
                android:inputType="textCapWords"
                android:layout_weight="4"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:textColor="@color/materialBlack"
                android:id="@+id/futsalSearchField"></EditText>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/searchFutsalRecyclerView"
            android:layout_marginTop="25dp"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="25dp"
            android:visibility="gone"
            android:id="@+id/progressBar_futsalGroundFragment"></ProgressBar>


    </LinearLayout>


</FrameLayout>