<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pleasingWhite"
    android:layout_height="match_parent"
    tools:context=".Futsal.Futsal_CustomizeFutsalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/morePleasingWhite"
            android:layout_height="55dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/morePleasingWhite"
                app:cardElevation="2dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/backButton_futsalAdditionalInfoPage"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_back_black_24dp"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Information"
                        android:textSize="55px"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fill These In"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/materialBlack"
                    android:textSize="50px"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:elevation="5dp"
                    android:layout_marginTop="25dp"
                    app:cardCornerRadius="1dp"
                    android:backgroundTint="@color/morePleasingWhite"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Futsal Price"
                            android:textColor="@color/materialBlack"
                            android:textSize="35px"></TextView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            app:passwordToggleEnabled="true"
                            android:gravity="center">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:id="@+id/futsalPrice_customizeFutsal"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:elevation="5dp"
                    android:layout_marginTop="25dp"
                    app:cardCornerRadius="1dp"
                    android:backgroundTint="@color/morePleasingWhite"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Futsal Opening Time"
                            android:textColor="@color/materialBlack"
                            android:textSize="35px"></TextView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:weightSum="10"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:gravity="right"
                                android:layout_height="match_parent">
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_marginRight="15dp"
                                    android:padding="15dp"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/openingTimeSpinner_futsalAdditionalInfo"></Spinner>
                            </RelativeLayout>



                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="to"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/materialBlack"
                                    android:textSize="35px"></TextView>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:gravity="left"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_gravity="left"
                                    android:padding="15dp"
                                    android:gravity="left"
                                    android:layout_marginLeft="15dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/closingTimeSpinner_futsalAdditionalInfo"></Spinner>

                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:elevation="5dp"
                    android:layout_marginTop="25dp"
                    app:cardCornerRadius="1dp"
                    android:backgroundTint="@color/morePleasingWhite"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"

                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Futsal Opening Days"
                            android:textColor="@color/materialBlack"
                            android:textSize="35px"></TextView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:weightSum="3"
                            android:orientation="horizontal">

                            <com.dpro.widgets.WeekdaysPicker
                                android:id="@+id/weekdays_additionalInfoFutsal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:sunday_first_day="false" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:elevation="5dp"
                    android:layout_marginTop="25dp"
                    app:cardCornerRadius="1dp"
                    android:backgroundTint="@color/morePleasingWhite"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Pictures of Your Facilities"
                            android:textColor="@color/materialBlack"
                            android:textSize="35px"></TextView>



                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/round_buttons"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="15dp"
                            android:text="Choose Photos"
                            android:id="@+id/choosePhoto_additionalInformationFutsal"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"></Button>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="5dp"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="1dp"
                android:backgroundTint="@color/morePleasingWhite"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extra Services Provided by your Futsal"
                        android:textColor="@color/materialBlack"
                        android:textSize="35px"></TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclerView_customizeFutsal"></androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>