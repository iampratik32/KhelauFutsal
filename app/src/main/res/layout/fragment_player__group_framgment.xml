<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player.Player_GroupFramgment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:text="Conversations"
                android:textColor="@color/pleasingText"
                android:textSize="65px"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="35px"
                android:layout_marginTop="25dp"
                android:visibility="gone"
                android:id="@+id/chatIsEmpty"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Your Chat is Empty. Book Some Futsals."></TextView>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/messagesRecyclerView_chatFragment"
                    android:scrollbars="vertical"
                    android:layout_marginTop="20dp"></androidx.recyclerview.widget.RecyclerView>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>