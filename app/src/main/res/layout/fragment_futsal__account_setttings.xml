<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pleasingWhite"
    android:layout_height="match_parent"
    tools:context=".Futsal.Futsal_AccountSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/morePleasingWhite"
            android:layout_height="55dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/morePleasingWhite"
                app:cardElevation="2dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/backButton_futsalAccountSettingsPage"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_back_black_24dp"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Settings"
                        android:textSize="55px"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="40dp"
                        android:id="@+id/displayPicture_accountSettings"
                        android:src="@drawable/futsal_icon"></de.hdodenhof.circleimageview.CircleImageView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/materialBlack"
                        android:textSize="50px"
                        android:text="Futsal Information"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="45px"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:id="@+id/futsalName_accountSettingsFragment"></TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="7dp"
                        android:id="@+id/futsalNameCardView_AccountSettings"
                        android:layout_height="wrap_content"
                        android:background="@color/pleasingWhite"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="Futsal Name"
                                    android:layout_weight="9"
                                    android:textSize="40px"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/pleasingText"
                                    android:layout_weight="1"
                                    android:textSize="40px"
                                    android:text="Edit"></TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/toHide_enterFutsalNameAccountSettings"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8"
                                    android:gravity="center">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/enterNewFutsalName_AccountSettings"
                                        android:inputType="textPersonName"
                                        android:layout_height="wrap_content"
                                        android:hint="  New Futsal Name" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2"
                                    android:id="@+id/newFutsalNameDoneButton_AccountSettings"
                                    android:background="@drawable/round_buttons"
                                    android:text="Done"></Button>

                            </LinearLayout>


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="45px"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:id="@+id/ownerName_accountSettingsFragment"></TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="7dp"
                        android:id="@+id/futsalOwnerNameCardView_AccountSettings"
                        android:layout_height="wrap_content"
                        android:background="@color/pleasingWhite"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="Manager Name"
                                    android:layout_weight="9"
                                    android:textSize="40px"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/pleasingText"
                                    android:layout_weight="1"
                                    android:textSize="40px"
                                    android:text="Edit"></TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/toHide_enterOwnerNameAccountSettings"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8"
                                    android:gravity="center">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/enterNewOwnerName_AccountSettings"
                                        android:inputType="textPersonName"
                                        android:layout_height="wrap_content"
                                        android:hint="  New Manager Name" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2"
                                    android:id="@+id/newFutsalOwnerNameDoneButton_AccountSettings"
                                    android:background="@drawable/round_buttons"
                                    android:text="Done"></Button>

                            </LinearLayout>


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="45px"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:id="@+id/futsalEmail_accountSettingsFragment"></TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="7dp"
                        android:id="@+id/futsalEmailCardView_AccountSettings"
                        android:layout_height="wrap_content"
                        android:background="@color/pleasingWhite"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="Futsal Email Address"
                                    android:layout_weight="9"
                                    android:textSize="40px"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/pleasingText"
                                    android:layout_weight="1"
                                    android:textSize="40px"
                                    android:text="Edit"></TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/toHide_enterFutsalEmailAccountSettings"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8"
                                    android:gravity="center">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/enterFutsalEmail_AccountSettings"
                                        android:inputType="textEmailAddress"
                                        android:layout_height="wrap_content"
                                        android:hint="  New Email Address" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2"
                                    android:id="@+id/newFutsalEmailDoneButton_AccountSettings"
                                    android:background="@drawable/round_buttons"
                                    android:text="Done"></Button>

                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:id="@+id/progressBar_emailAccountSettings"
                                    android:visibility="gone"></ProgressBar>

                            </LinearLayout>


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="45px"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:id="@+id/futsalContactNumber_accountSettingsFragment"></TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="7dp"
                        android:id="@+id/futsalContactNumberCardView_AccountSettings"
                        android:layout_height="wrap_content"
                        android:background="@color/pleasingWhite"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="Futsal Contact"
                                    android:layout_weight="9"
                                    android:textSize="40px"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/pleasingText"
                                    android:layout_weight="1"
                                    android:textSize="40px"
                                    android:text="Edit"></TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/toHide_enterFutsalContactNumberAccountSettings"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8"
                                    android:gravity="center">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/enterNewFutsalContactNumber_AccountSettings"
                                        android:inputType="textPersonName"
                                        android:layout_height="wrap_content"
                                        android:hint="  New Manager Name" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2"
                                    android:id="@+id/newContactNumberNameDoneButton_AccountSettings"
                                    android:background="@drawable/round_buttons"
                                    android:text="Done"></Button>

                            </LinearLayout>


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/materialBlack"
                        android:textSize="50px"
                        android:text="Personal Information"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="45px"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:id="@+id/personalContact_accountSettingsFragment"></TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="7dp"
                        android:id="@+id/personalContactCardView_AccountSettings"
                        android:layout_height="wrap_content"
                        android:background="@color/pleasingWhite"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="Personal Contact"
                                    android:layout_weight="9"
                                    android:textSize="40px"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/pleasingText"
                                    android:layout_weight="1"
                                    android:textSize="40px"
                                    android:text="Edit"></TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/toHide_enterPersonalContactAccountSettings"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8"
                                    android:gravity="center">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/enterNewPersonalContact_AccountSettings"
                                        android:inputType="phone"
                                        android:layout_height="wrap_content"
                                        android:hint="  New Personal Contact" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2"
                                    android:id="@+id/newPersonalContactDoneButton_AccountSettings"
                                    android:background="@drawable/round_buttons"
                                    android:text="Done"></Button>

                            </LinearLayout>


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="45px"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:id="@+id/personalEmail_accountSettingsFragment"></TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="7dp"
                        android:id="@+id/personalEmailCardView_AccountSettings"
                        android:layout_height="wrap_content"
                        android:background="@color/pleasingWhite"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="Personal Email"
                                    android:layout_weight="9"
                                    android:textSize="40px"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/pleasingText"
                                    android:layout_weight="1"
                                    android:textSize="40px"
                                    android:text="Edit"></TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/toHide_enterPersonalEmailAccountSettings"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8"
                                    android:gravity="center">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/enterNewPersonalEmail_AccountSettings"
                                        android:inputType="textEmailAddress"
                                        android:layout_height="wrap_content"
                                        android:hint="  New Email" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2"
                                    android:id="@+id/newPersonalEmailDoneButton_AccountSettings"
                                    android:background="@drawable/round_buttons"
                                    android:text="Done"></Button>

                            </LinearLayout>


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="7dp"
                        android:id="@+id/changePasswordCardView_futsalAccountSettings"
                        android:layout_height="wrap_content"
                        android:background="@color/pleasingWhite"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textStyle="bold"
                                android:text="Change Password"
                                android:layout_gravity="center"
                                android:textSize="40px"></TextView>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="7dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/deleteAccountCardView_futsalSettingsActivity"
                            android:background="@color/pleasingWhite"
                            android:elevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/materialBlack"
                                    android:text="Delete Account"
                                    android:layout_gravity="center"
                                    android:textSize="40px"></TextView>



                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></View>


            </LinearLayout>



        </ScrollView>

    </LinearLayout>



</FrameLayout>