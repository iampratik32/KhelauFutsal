<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pleasingWhite"
    tools:context=".Futsal.Futsal_StartingVerificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/morePleasingWhite"
            android:layout_height="55dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/morePleasingWhite"
                app:cardElevation="2dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/backButton_futsalFinalVerificationPage"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_back_black_24dp"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verification"
                        android:textSize="55px"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/materialBlack"
                        android:textSize="50px"
                        android:text="Futsal Information"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="7dp"
                            android:id="@+id/futsalInformationCardView_futsalFinalVerification"
                            android:layout_height="wrap_content"
                            android:background="@color/pleasingWhite"
                            android:elevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:text="Futsal Name"
                                        android:layout_weight="9"
                                        android:textSize="40px"></TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:textColor="@color/pleasingText"
                                        android:layout_weight="1"
                                        android:id="@+id/futsalName_endingVerification"
                                        android:textSize="40px"
                                        android:text=""></TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:text="Futsal Email"
                                        android:layout_weight="9"
                                        android:textSize="40px"></TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:textColor="@color/pleasingText"
                                        android:layout_weight="1"
                                        android:textSize="40px"
                                        android:id="@+id/futsalEmail_endingVerification"
                                        android:text=""></TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:text="Futsal Owner Name"
                                        android:layout_weight="9"
                                        android:textSize="40px"></TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:textColor="@color/pleasingText"
                                        android:layout_weight="1"
                                        android:textSize="40px"
                                        android:id="@+id/futsalOwnerName_endingVerification"
                                        android:text=""></TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:text="Futsal Contact Number"
                                        android:layout_weight="9"
                                        android:textSize="40px"></TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:textColor="@color/pleasingText"
                                        android:layout_weight="1"
                                        android:id="@+id/futsalContact_endingVerification"
                                        android:textSize="40px"
                                        android:text=""></TextView>

                                </LinearLayout>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/round_buttons"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginRight="50dp"
                                    android:id="@+id/changeFutsalInformation_endingVerification"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Change These Information"></Button>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="30px"
                            android:textColor="@color/materialBlack"
                            android:text="You have entered these information during the registration phase. Please change it if any of the information displayed above is incorrect."></TextView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/materialBlack"
                        android:textSize="50px"
                        android:text="Futsal Location"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="7dp"
                            android:id="@+id/futsalLocationCardView_futsalFinalVerification"
                            android:layout_height="wrap_content"
                            android:background="@color/pleasingWhite"
                            android:elevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="10"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:maxLines="2"
                                        android:textColor="@color/pleasingText"
                                        android:id="@+id/futsalLocation_endingVerification"
                                        android:textSize="40px"></TextView>

                                </LinearLayout>


                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/round_buttons"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginRight="50dp"
                                    android:id="@+id/changeLocation_endingVerification"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Change Location"></Button>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="30px"
                            android:textColor="@color/materialBlack"
                            android:text="You have entered this as your Futsal Location during the registration phase. Please change it if this information is incorrect."></TextView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/materialBlack"
                        android:textSize="50px"
                        android:text="Futsal Information"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="7dp"
                            android:id="@+id/personalInformationCardView_futsalFinalVerification"
                            android:layout_height="wrap_content"
                            android:background="@color/pleasingWhite"
                            android:elevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:text="Personal Email"
                                        android:layout_weight="9"
                                        android:textSize="40px"></TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:textColor="@color/pleasingText"
                                        android:layout_weight="1"
                                        android:id="@+id/personalEmail_endingVerification"
                                        android:textSize="40px"
                                        android:text=""></TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:text="Personal Contact Number"
                                        android:layout_weight="9"
                                        android:textSize="40px"></TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:textColor="@color/pleasingText"
                                        android:layout_weight="1"
                                        android:textSize="40px"
                                        android:id="@+id/personalContact_endingVerification"
                                        android:text=""></TextView>

                                </LinearLayout>


                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/round_buttons"
                                    android:id="@+id/changePersonalInfo_endingVerification"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Change Personal Information"></Button>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="30px"
                            android:textColor="@color/materialBlack"
                            android:text="You have entered these personal information during the registration phase. Please change it if any of the information displayed above is incorrect."></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/white_button"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:id="@+id/changeCustomize_endingVerification"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:text="Add Additional Information"></Button>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="30px"
                            android:textColor="@color/materialBlack"
                            android:text="You must add additional futsal information in this section. If every information is legit, move forward."></TextView>

                    </LinearLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/white_button"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/sendVerificationButton_finalVerification"
                        android:text="Send Verification Request to Our Team"></Button>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></View>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>