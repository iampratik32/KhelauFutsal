<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/frosty_gradient"
    tools:context=".Futsal.Futsal_ConfirmActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:src="@drawable/user_cover_art"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_26dp"
            android:id="@+id/closeButton_futsalConfirm"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_black_24dp"
            android:id="@+id/menuButton_futsalConfirm"
            android:layout_margin="5dp"></ImageView>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/chat_icon"
            android:layout_alignParentRight="true"
            android:id="@+id/chatButton_bookingConfirmPage"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/userDisplayImage_futsalConfirm"
                android:src="@drawable/no_photo"
                android:layout_alignParentBottom="true"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/userName_futsalConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:fontFamily="@font/baloo_bhaina"
                android:textColor="@color/pleasingWhite"
                android:textSize="55px"
                android:textStyle="bold"></TextView>



        </LinearLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/pleasingWhite"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Booked For:"
                        android:textSize="40px"
                        android:textStyle="bold"
                        android:textColor="@color/materialBlack"
                        android:layout_weight="5"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_weight="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:id="@+id/futsalDate_pendingFutsal"
                            android:textColor="@color/materialBlack"></TextView>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/pleasingWhite"
                android:elevation="5dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="At:"
                        android:textSize="40px"
                        android:textStyle="bold"
                        android:textColor="@color/materialBlack"
                        android:layout_weight="5"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_weight="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:id="@+id/futsalTime_pendingFutsal"
                            android:textColor="@color/materialBlack"></TextView>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/pleasingWhite"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Paying:"
                        android:textSize="40px"
                        android:textStyle="bold"
                        android:textColor="@color/materialBlack"
                        android:layout_weight="5"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_weight="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:id="@+id/futsalPrice_pendingFutsal"
                            android:textColor="@color/materialBlack"></TextView>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:id="@+id/phoneLayout_confirmBooking"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/pleasingWhite"
                    android:elevation="5dp"
                    android:layout_weight="3"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="10"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_phone_black_24dp"></ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Call to Confirm"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/phoneNumber_pendingFutsal"></TextView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_buttons"
                android:text="Cancel"
                android:id="@+id/cancelOwnBookingButton"
                android:visibility="gone"
                android:layout_gravity="center"></Button>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center|bottom"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:id="@+id/confirmBookingButton_confirmBooking"
                        android:text="Confirm Booking"
                        android:padding="15dp"
                        android:background="@drawable/round_buttons"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:layout_marginTop="-10dp"
                        android:id="@+id/orText_confrim"
                        android:text="-OR-"
                        android:textColor="@color/pleasingWhite"></TextView>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/rejectButton_confirmBooking"
                        android:text="Reject Offer"
                        android:padding="15dp"
                        android:background="@drawable/round_buttons"></Button>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/cancelRequestLayout_futsalConfirmBooking"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:text="This User Has Requested to Cancel Their Booking."></TextView>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:id="@+id/acceptCancelButton_confirmBooking"
                        android:text="Cancel Booking"
                        android:padding="15dp"
                        android:background="@drawable/round_buttons"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:layout_marginTop="-10dp"
                        android:text="-OR-"
                        android:textColor="@color/pleasingWhite"></TextView>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/rejectCancelButton_confirmBooking"
                        android:text="Reject Cancellation"
                        android:padding="15dp"
                        android:background="@drawable/round_buttons"></Button>




                </LinearLayout>




            </RelativeLayout>

        </LinearLayout>


    </ScrollView>



</LinearLayout>