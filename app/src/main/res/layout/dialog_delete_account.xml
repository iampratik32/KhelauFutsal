<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/another_gradient"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="25dp"
        android:paddingBottom="30dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Delete Account?"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:text="Do you want to delete this account? Your data will be deleted."
            android:textSize="15dp"
            android:textStyle="bold"></TextView>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="gone"
            android:id="@+id/progressBar_deleteAccount"></ProgressBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/yesButton_deleteAccountDialog"
                    android:layout_height="50dp"
                    android:background="@drawable/peach_button"
                    android:textStyle="bold"
                    android:text="Yes. Delete."></Button>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/noButton_deleteAccountDialog"
                    android:layout_height="50dp"
                    android:background="@drawable/white_button"
                    android:textStyle="bold"
                    android:text="No. Cancel."></Button>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>